{
    "name": "knockoffarcade/api",
    "description": "PHP backend for KnockoffArcade game",
    "type": "project",
    "require": {
        "php": ">=8.0",
        "slim/slim": "^4.12",
        "slim/psr7": "^1.6",
        "monolog/monolog": "^3.4",
        "vlucas/phpdotenv": "^5.5",
        "firebase/php-jwt": "^6.8",
        "ramsey/uuid": "^4.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.3",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "KnockoffArcade\\": "api/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse api --level=max",
        "phpcs": "phpcs api",
        "phpcbf": "phpcbf api"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}